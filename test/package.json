{
  "name": "cdr-tests",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Jembi",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.0.2",
    "newman": "^5.2.2"
  },
  "scripts": {
    "bootstrap": "yarn newman run 'CDR.postman_collection.json' --folder 'Bootstrap'",
    "test": "yarn newman run 'CDR.postman_collection.json' --folder 'Submit static bundle'",
    "test:1000": "yarn test -n 1000 --delay-request 1000",
    "test:abuse": "yarn test -n 1000",
    "test:abuse-x4": "yarn concurrently \"yarn test:abuse\" \"yarn test:abuse\" \"yarn test:abuse\" \"yarn test:abuse\"",
    "bootstrap:qa": "yarn bootstrap --env-var openhimHost=<qa_hostname>",
    "test:qa": "yarn test --env-var openhimHost=<qa_hostname>",
    "test:qa:1000": "yarn test:1000 --env-var openhimHost=<qa_hostname>",
    "bootstrap:stg": "yarn bootstrap --env-var openhimHost=<stg_hostname>",
    "test:stg": "yarn test --env-var openhimHost=<stg_hostname>",
    "test:stg:1000": "yarn test:1000 --env-var openhimHost=<stg_hostname>"
  }
}
